---
import Title from "../components/atoms/Title.astro";
import { getCollection } from 'astro:content';
import Boton from "./atoms/Boton.astro";
import FormattedDate from "./FormattedDate.astro";
import CardBlog from "./CardBlog.astro";
const posts = (await getCollection('blog')).sort(
(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

---
<section id="contact" class="flex flex-col items-center w-full h-full md:max-w-full justify-center px-4 pb-16">
  <Title contenido="Me Contacter" margin="2rem" />

  <div class="flex items-center justify-around w-full max-w-5xl p-8 rounded-lg" style="background-color: rgba(0, 0, 0, 0.7);">

    <!-- Email -->
    <div class="flex items-center gap-6">
      <div class="flex items-center justify-center w-16 h-16 bg-blue-600 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <div class="flex flex-col">
        <span class="text-gray-200 text-lg">Email</span>
        <a href="mailto:g.viaud16@gmail.com" class="text-white text-xl hover:text-blue-400 transition-colors">g.viaud16@gmail.com</a>
      </div>
    </div>

    <!-- Téléphone -->
    <div class="flex items-center gap-6">
      <div class="flex items-center justify-center w-16 h-16 bg-green-600 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
      </div>
      <div class="flex flex-col">
        <span class="text-gray-200 text-lg">Téléphone</span>
        <a href="tel:0788254373" class="text-white text-xl hover:text-green-400 transition-colors">07 88 25 43 73</a>
      </div>
    </div>

    <!-- Adresse -->
    <div class="flex items-center gap-6">
      <div class="flex items-center justify-center w-16 h-16 bg-purple-600 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <div class="flex flex-col">
        <span class="text-gray-200 text-lg">Adresse</span>
        <address class="text-white not-italic text-xl">7 rue richavent<br/>Chateauneuf sur charente</address>
      </div>
    </div>

  </div>
</section>