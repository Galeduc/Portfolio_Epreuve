---
import Boton from "../components/atoms/Boton.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page non trouvée">
        <section class="flex flex-col items-center justify-center h-screen text-center">
                <h1 class="text-4xl font-bold mb-4">404 - Page non trouvée</h1>
                <p class="text-lg mb-8">Désolé, la page que vous recherchez n'existe pas.</p>
                <Boton texto="Retour à l'accueil" href="/"/>
        </section>
</Layout>